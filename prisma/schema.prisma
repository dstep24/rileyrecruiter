// OUTREACH SETTINGS (PERSISTED)
// =============================================================================

/// Stores outreach settings per tenant (replaces in-memory settings)
model OutreachSettings {
  id                      String    @id @default(uuid())

  // Auto-pitch settings
  autoPitchOnAcceptance   Boolean   @default(true)
  pitchDelayMinutes       Int       @default(0)

  // Follow-up settings
  followUpEnabled         Boolean   @default(true)
  followUpDays            Json      @default("[3, 7, 14]")  // Array of days
  maxFollowUps            Int       @default(3)
  includeCalendlyInFinal  Boolean   @default(true)

  // AI response settings
  autoRespondEnabled      Boolean   @default(true)
  escalateToHumanKeywords Json      @default("[\"salary\", \"compensation\", \"benefits\"]")

  // Metadata
  tenantId                String    @unique @default("development")
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  @@map("outreach_settings")
}
